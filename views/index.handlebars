<h1 class="burger">Burgers!</h1>


<div class="wrapper">
  <div class="not-eaten">
    <h2>Burgers that are not eaten!</h2>

    <ul>
      {{#each burgers}}
      {{#unless eaten}}
      {{> burgers/burger-block eaten=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="eaten">
    <h2>Burgers that are eaten!</h2>

    <ul>
      {{#each burgers}}
      {{#if eaten}}
      {{> burgers/burger-block eaten=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="add">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
      <label for="eaten">Eaten?</label><br>
      <input type="radio" name="eaten" value="1" checked> Eaten!<br>
      <input type="radio" name="eaten" value="0"> Whole
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>


